using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace oop_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Animal animal1 = new Animal();
            animal1.Name = "Mommam";
            animal1.Species = "Dog";
            animal1.MakeSound();
            Console.ReadLine();

        }

        public class Animal
        {
            public string Name;
            public String Species;

            public void MakeSound()
            {
                Console.WriteLine(Name + " the " + Species + " make a sound! ");
            }
        }
    }

}
